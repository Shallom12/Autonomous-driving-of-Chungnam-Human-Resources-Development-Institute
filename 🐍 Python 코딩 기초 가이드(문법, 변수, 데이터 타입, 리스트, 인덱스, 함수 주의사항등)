### 3. ìŠ¤ì¿¨ì¡´ ì•ˆì „ ìš´ì „ ì‹œìŠ¤í…œ

```python
from datetime import datetime

def school_zone_safety_check(current_zone, zone_speed_limit, current_time, 
                           day_of_week, children_detected, current_speed):
    """ìŠ¤ì¿¨ì¡´ ì•ˆì „ ìš´ì „ ì‹œìŠ¤í…œ
    
    Args:
        current_zone (str): í˜„ì¬ êµ¬ì—­ ìœ í˜•
        zone_speed_limit (int): êµ¬ì—­ ì œí•œì†ë„
        current_time (int): í˜„ì¬ ì‹œê°„ (0-23)
        day_of_week (str): ìš”ì¼
        children_detected (bool): ì–´ë¦°ì´ ê°ì§€ ì—¬ë¶€
        current_speed (int): í˜„ì¬ ì†ë„
    
    Returns:
        dict: ì•ˆì „ ìš´ì „ ì§€ì¹¨
    """
    
    print(f"ğŸ« êµ¬ì—­ ì•ˆì „ ë¶„ì„:")
    print(f"- í˜„ì¬ êµ¬ì—­: {current_zone}")
    print(f"- ê¸°ë³¸ ì œí•œì†ë„: {zone_speed_limit} km/h")
    print(f"- í˜„ì¬ ì‹œê°„: {current_time}:00")
    print(f"- ìš”ì¼: {day_of_week}")
    print(f"- ì–´ë¦°ì´ ê°ì§€: {'ì˜ˆ' if children_detected else 'ì•„ë‹ˆì˜¤'}")
    print(f"- í˜„ì¬ ì†ë„: {current_speed} km/h")
    print("-" * 40)
    
    # ê¸°ë³¸ ì„¤ì •
    enforced_speed_limit = zone_speed_limit
    extra_caution = False
    safety_measures = []
    
    if current_zone == "school_zone":
        # ë“±í•˜êµ ì‹œê°„ëŒ€ í™•ì¸
        if 7 <= current_time <= 9 or 14 <= current_time <= 16:
            if day_of_week in ["monday", "tuesday", "wednesday", "thursday", "friday"]:
                enforced_speed_limit = 30
                extra_caution = True
                safety_measures.append("ë“±í•˜êµ ì‹œê°„ëŒ€ íŠ¹ë³„ ì£¼ì˜")
            else:
                enforced_speed_limit = 40
                safety_measures.append("ì£¼ë§ ìŠ¤ì¿¨ì¡´ ìš´ì „")
        else:
            enforced_speed_limit = 50
            safety_measures.append("ì¼ë°˜ ì‹œê°„ëŒ€")
            
        # ì–´ë¦°ì´ ê°ì§€ ì‹œ ì¶”ê°€ ì¡°ì¹˜
        if children_detected:
            enforced_speed_limit = min(enforced_speed_limit, 25)
            extra_caution = True
            safety_measures.append("ì–´ë¦°ì´ ë³´í–‰ì ê°ì§€")
            
    elif current_zone == "hospital_zone":
        enforced_speed_limit = 30
        extra_caution = True
        safety_measures.append("ë³‘ì› êµ¬ì—­ ì„œí–‰")
        
    elif current_zone == "construction":
        enforced_speed_limit = 40
        safety_measures.append("ê³µì‚¬ êµ¬ê°„ ì£¼ì˜")
        
    # ì†ë„ ì¡°ì • íŒë‹¨
    if current_speed > enforced_speed_limit:
        speed_action = "ì¦‰ì‹œ ê°ì† í•„ìš”"
        urgency = "ğŸš¨ ê¸´ê¸‰"
    elif current_speed > enforced_speed_limit * 0.9:
        speed_action = "ì†ë„ ì¡°ì‹¬"
        urgency = "âš ï¸ ì£¼ì˜"
    else:
        speed_action = "ì ì • ì†ë„ ìœ ì§€"
        urgency = "âœ… ì–‘í˜¸"
    
    # ì¶”ê°€ ì•ˆì „ ì¡°ì¹˜
    if extra_caution:
        safety_measures.extend([
            "ì „ë°© ì£¼ì‹œ ê°•í™”",
            "ë¹„ìƒë“± ì ë©¸ ê³ ë ¤",
            "ì„œí–‰ ì¤€ë¹„"
        ])
    
    return {
        "enforced_limit": enforced_speed_limit,
        "action": speed_action,
        "urgency": urgency,
        "extra_caution": extra_caution,
        "measures": safety_measures
    }

# ë‹¤ì–‘í•œ ì‹œë‚˜ë¦¬ì˜¤ í…ŒìŠ¤íŠ¸
